<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="cardRoot" alignment="CENTER" styleClass="challenge-card" stylesheets="@../styles/onlinemultplayer.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1">
    <VBox prefWidth="198.0">
        <Label fx:id="nameLabel" styleClass="opponent-name" text="Name" />
        <HBox VBox.vgrow="ALWAYS">
            <Label fx:id="winsLabel" styleClass="opponent-wins" text="W:0">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin></Label>
            <Label fx:id="losesLabel" styleClass="opponent-loses" text="L:0" />
        </HBox>
    </VBox>
    <Pane HBox.hgrow="ALWAYS" />
    <Button fx:id="challengeButton" styleClass="challenge-button" text="Challenge" />
</HBox>
