<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import java.net.URL?>

<StackPane minHeight="480.0" minWidth="640.0" prefHeight="480.0" prefWidth="640.0"
           xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.clientside.controllers.DifficultyScreenController">

    <stylesheets>
        <URL value="@../styles/difficultyScreen.css" />
    </stylesheets>

    <!-- Main Content -->
    <VBox alignment="TOP_CENTER" spacing="20.0">
        <StackPane.margin>
            <Insets top="50.0" />
        </StackPane.margin>

        <!-- Character Avatar -->
        <StackPane prefHeight="80.0" prefWidth="80.0">
            <Circle radius="40.0" styleClass="avatar-circle" />
            <Label text="ðŸ‘¤" styleClass="avatar-emoji">
                <font>
                    <Font size="35.0" />
                </font>
            </Label>
        </StackPane>

        <!-- Title -->
        <VBox alignment="CENTER" spacing="3.0">
            <Label text="Vs. NPC" styleClass="title-main">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
            <Label text="Challenge the AI Master!" styleClass="title-subtitle">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
        </VBox>

        <!-- Game Options Card -->
        <VBox alignment="CENTER" maxWidth="320.0" prefWidth="320.0" spacing="15.0" styleClass="game-options-card">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>

            <!-- Difficulty Selection -->
            <VBox alignment="CENTER" spacing="10.0">
                <Label text="SELECT DIFFICULTY" styleClass="difficulty-label">
                    <font>
                        <Font name="System Bold" size="10.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER" spacing="8.0">
                    <fx:define>
                        <ToggleGroup fx:id="difficultyGroup" />
                    </fx:define>

                    <ToggleButton text="Easy"
                                  onAction="#clickEasy"
                                  prefHeight="35.0"
                                  prefWidth="90.0"
                                  selected="true"
                                  styleClass="difficulty-button-easy"
                                  toggleGroup="$difficultyGroup">
                        <font>
                            <Font name="System Bold" size="11.0" />
                        </font>
                    </ToggleButton>

                    <ToggleButton text="Medium"
                                  onAction="#clickMedium"
                                  prefHeight="35.0"
                                  prefWidth="90.0"
                                  styleClass="difficulty-button-medium"
                                  toggleGroup="$difficultyGroup">
                        <font>
                            <Font name="System Bold" size="11.0" />
                        </font>
                    </ToggleButton>

                    <ToggleButton text="Hard"
                                  onAction="#clickHard"
                                  prefHeight="35.0"
                                  prefWidth="90.0"
                                  styleClass="difficulty-button-hard"
                                  toggleGroup="$difficultyGroup">
                        <font>
                            <Font name="System Bold" size="11.0" />
                        </font>
                    </ToggleButton>
                </HBox>
            </VBox>

            <!-- Record Game Button -->
            <Button text="âº  Record Game"
                    onAction="#clickRecordGame"
                    prefHeight="40.0"
                    prefWidth="270.0"
                    styleClass="record-button">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>

            <!-- Play Game Button -->
            <Button text="â–¶  Play Game"
                    onAction="#clickPlayGame"
                    prefHeight="45.0"
                    prefWidth="270.0"
                    styleClass="play-button">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
        </VBox>

        <!-- Back to Menu Link -->
        <Button text="Back to Menu"
                onAction="#backToMenu"
                prefHeight="25.0"
                styleClass="back-button">
            <graphic>
                <ImageView fitHeight="31.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" smooth="true">
                    <Image url="@../images/arrow_back.png" />
                </ImageView>
            </graphic>
        </Button>

    </VBox>

</StackPane>