<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" prefHeight="512.0" prefWidth="418.0" style="-fx-background-color: rgba(200, 210, 220, 0.5);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.clientside.controllers.PlayerRequestScreenController">
    
    <!-- Dialog Card -->
    <VBox fx:id="parentVBox" alignment="TOP_CENTER" maxHeight="600.0" maxWidth="420.0" prefWidth="420.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #f0f4f8, #ffffff);">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>
        
        <!-- Title -->
        <VBox alignment="CENTER" spacing="5.0">
            <Label style="-fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: #1e293b;" text="New Challenger!">
                <font>
                    <Font name="System Bold" size="26.0" />
                </font>
            </Label>
            <Label style="-fx-font-size: 13; -fx-text-fill: #64748b;" text="Ranked Match Request">
                <font>
                    <Font size="13.0" />
                </font>
            </Label>
        </VBox>
        
        <!-- Player Avatar -->
        <StackPane prefHeight="100.0" prefWidth="100.0">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
            <Circle radius="50.0" style="-fx-fill: linear-gradient(to bottom, #7dd3fc, #0ea5e9);" />
         <ImageView fx:id="imageIcon" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         <Circle fill="#54b94f" radius="15.0" rotate="-3.0" style="-fx-fill: #22c55e;">
            <StackPane.margin>
               <Insets left="80.0" top="75.0" />
            </StackPane.margin>
         </Circle>
        </StackPane>
        
        <!-- Player Name -->
        <Label fx:id="challengerName" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #1e293b;" text="CyberNinja99">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        
        <!-- Player Stats -->
        <HBox alignment="CENTER" spacing="15.0">
            <Label fx:id="challengerStatus" style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #a855f7;" text="DIAMOND">
                <font>
                    <Font name="System Bold" size="11.0" />
                </font>
            </Label>
            <Label style="-fx-font-size: 8; -fx-text-fill: #cbd5e1;" text="â—">
                <font>
                    <Font size="8.0" />
                </font>
            </Label>
            <Label fx:id="challengerWinRate" style="-fx-font-size: 11; -fx-text-fill: #64748b;" text="Win Rate: 58%">
                <font>
                    <Font size="11.0" />
                </font>
            </Label>
         <VBox.margin>
            <Insets bottom="16.0" />
         </VBox.margin>
        </HBox>
        
        <!-- Action Buttons -->
        <HBox fx:id="receiveButtons" alignment="CENTER" spacing="15.0">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
            
            <Button onAction="#declineChallenge" prefHeight="50.0" prefWidth="165.0" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #64748b; -fx-border-color: #e2e8f0; -fx-border-radius: 25; -fx-border-width: 2; -fx-cursor: hand; -fx-font-weight: bold;" text="Decline">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
            
            <Button onAction="#acceptChallenge" prefHeight="50.0" prefWidth="165.0" style="-fx-background-color: #0ea5e9; -fx-background-radius: 25; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;" text="Accept Challenge">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
        </HBox>
      <Button fx:id="cancelButton" onAction="#cancelChallenge" prefHeight="50.0" prefWidth="165.0" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #64748b; -fx-border-color: #e2e8f0; -fx-border-radius: 25; -fx-border-width: 2; -fx-cursor: hand; -fx-font-weight: bold;" text="Cancel">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
        
    </VBox>
    
</StackPane>
